---
import {Heart} from 'lucide-astro'
---
<html lang="en">
<head>
    <title>Link Collection</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
    .cta-button {
      @apply block py-3 px-6 rounded-full border-2 border-blue-500 text-blue-500 font-semibold text-center transition-all duration-300 ease-in-out hover:bg-blue-500 hover:text-white focus:outline-none focus:ring-2 focus:ring-blue-300;
    }
    </style>
</head>
<body class="h-screen w-screen overflow-hidden flex items-center justify-center bg-gray-200">
<div class="max-w-xl w-1/2 mx-auto bg-white shadow-md rounded-2xl">
    <!-- Profile Image -->
    <div class="relative flex justify-center">
        <img alt="background image" class="h-32 w-full rounded-2xl object-cover" src="bg.jpeg">
        <img alt="profile picture" class="absolute -bottom-1/4 h-24 w-24 rounded-full border-4 border-white object-cover" src="fg.jpeg">
    </div>

    <div class="p-6">
        <!-- Bio -->
        <div class="text-center mt-14">
            <p class="text-3xl font-bold">Matteo Cosi</p>
            <p class="font-light">Software Developer</p>
        </div>


        <!-- Links Section -->
        <div class="mt-10 text-center">
            <p class="text-lg font-bold uppercase">Links</p>
            <div class="space-y-4 mt-4 px-12">
                    <a href="https://github.com/matteoc99" class="cta-button" target="_blank"
                        aria-label="Github">Github</a>

                    <a href="https://portfolio.matteocosi.com" class="cta-button" target="_blank"
                      aria-label="Portfolio">Portfolio</a>

                    <a href="https://www.linkedin.com/in/matteoc99" class="cta-button" target="_blank"
                        aria-label="LinkedIn">LinkedIn</a>
            </div>
        </div>

        <!-- Credits -->
        <div class="mt-20 flex flex-col gap-2 items-center">
            <p class="text-xs text-gray-500 uppercase">Made with</p>
            <Heart class="text-red-700"/>
        </div>
    </div>
</div>
</body>
</html>
